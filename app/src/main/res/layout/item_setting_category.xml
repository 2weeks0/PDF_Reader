<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="settingCategoryItem"
            type="com.ejooyoung.pdf_reader.main.category.setting.model.SettingCategoryItem" />
        <variable
            name="onTouchCategoryListener"
            type="com.ejooyoung.pdf_reader.main.category.setting.listener.OnTouchCategoryListener" />
    </data>

    <LinearLayout
        android:id="@+id/layItem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:animateLayoutChanges="true"
        android:onClick="@{(v) -> onTouchCategoryListener.onClick(v, btnChk)}"
        android:onLongClick="@{(v) -> onTouchCategoryListener.onLongClick(v)}">

        <CheckedTextView
            android:id="@+id/btnChk"
            android:drawableStart="@drawable/ic_round_check_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:visibility="@{settingCategoryItem.editMode ? View.VISIBLE : View.GONE}"
            android:clickable="true"
            android:focusable="true"
            android:checked="@{settingCategoryItem.selected}"
            android:onClick="@{() -> settingCategoryItem.setSelected(!settingCategoryItem.selected)}"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_hash_tag"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            style="@style/titleInPopupDialog"
            android:text="@{settingCategoryItem.name}"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="카테고리"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            style="@style/baseTextStyle"
            android:padding="10dp"
            android:text="@{String.valueOf(settingCategoryItem.count)}"
            tools:text="100"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivHandle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@drawable/ic_arrow_handle"/>
    </LinearLayout>
</layout>
