<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="settingCategoryItem"
            type="com.ejooyoung.pdf_reader.main.category.setting.model.SettingCategoryItem" />
        <variable
            name="onTouchCategoryListener"
            type="com.ejooyoung.pdf_reader.main.category.setting.listener.OnTouchCategoryListener" />
    </data>

    <LinearLayout
        android:id="@+id/layItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:animateLayoutChanges="true"
        android:onClick="@{(v) -> onTouchCategoryListener.onClick(v, btnRadio)}"
        android:onLongClick="@{(v) -> onTouchCategoryListener.onLongClick(v)}">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/btnRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:checked="@={settingCategoryItem.selected}"
            android:visibility="@{settingCategoryItem.editMode ? View.VISIBLE : View.GONE}"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_hash_tag"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/titleInPopupDialog"
            android:text="@{settingCategoryItem.name}"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="카테고리"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/baseTextStyle"
            android:layout_marginStart="15dp"
            android:text="@{String.valueOf(settingCategoryItem.count)}"
            tools:text="100"/>
    </LinearLayout>
</layout>
