<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="categoryItem"
            type="com.ejooyoung.pdf_reader.main.category.model.CategoryItem" />
        <variable
            name="onClickCategoryListener"
            type="com.ejooyoung.pdf_reader.main.category.listener.OnClickCategoryListener" />
    </data>

    <LinearLayout
        android:id="@+id/layItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:onClick="@{(v) -> onClickCategoryListener.onClickCategory(v, categoryItem.toCurrentCategory())}"
        android:onLongClick="@{(v) -> onClickCategoryListener.onLongClickCategory(v, categoryItem)}">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_hash_tag"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/titleInPopupDialog"
            android:text="@{categoryItem.name}"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="카테고리"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/baseTextStyle"
            android:layout_marginStart="15dp"
            android:text="@{String.valueOf(categoryItem.count)}"
            tools:text="100"/>
    </LinearLayout>
</layout>
