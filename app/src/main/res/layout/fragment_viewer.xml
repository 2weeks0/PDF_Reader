<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.ejooyoung.pdf_reader.viewer.ViewerViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/layRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/viewPdf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/layTouchZone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/leftTouchZone"
                android:layout_width="@dimen/touch_zone_width"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@{viewModel.visibilityScrollHandler ? @color/bg_previous_page : @android:color/transparent}"
                android:onClick="@{() -> viewModel.previousPage(viewPdf, scrollHandler)}"
                tools:background="@color/bg_previous_page"/>

            <View
                android:id="@+id/rightTouchZone"
                android:layout_width="@dimen/touch_zone_width"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@{viewModel.visibilityScrollHandler ? @color/bg_next_page : @android:color/transparent}"
                android:onClick="@{() -> viewModel.nextPage(viewPdf, scrollHandler)}"
                tools:background="@color/bg_next_page"/>
        </RelativeLayout>

        <include
            android:id="@+id/scrollHandler"
            layout="@layout/layout_scroll_handler"
            android:visibility="@{viewModel.visibilityScrollHandler ? View.VISIBLE : View.GONE}"
            app:viewModel="@{viewModel}"/>
    </FrameLayout>
</layout>