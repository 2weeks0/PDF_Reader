<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.ejooyoung.pdf_reader.viewer.ViewerViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/layRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/viewPdf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:visibility="@{viewModel.visibilityScrollHandler ? View.VISIBLE : View.GONE}"/>

            <RelativeLayout
                android:id="@+id/layTouchZone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <View
                    android:id="@+id/leftTouchZone"
                    android:layout_width="@dimen/touch_zone_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:onClick="@{() -> viewModel.previousPage(viewPdf)}"/>

                <View
                    android:id="@+id/rightTouchZone"
                    android:layout_width="@dimen/touch_zone_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:onClick="@{() -> viewModel.nextPage(viewPdf)}"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_handler_bottom_height"
                android:visibility="@{viewModel.visibilityScrollHandler ? View.VISIBLE : View.GONE}"/>
        </LinearLayout>
    </FrameLayout>
</layout>