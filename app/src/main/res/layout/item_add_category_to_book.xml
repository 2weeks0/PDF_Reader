<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="addableBook"
            type="com.ejooyoung.pdf_reader.main.category.addition.model.AddableBook" />
        <variable
            name="onClickAddableBookListener"
            type="com.ejooyoung.pdf_reader.main.category.addition.listener.OnClickAddableBookListener" />
    </data>

    <LinearLayout
        android:id="@+id/layItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:animateLayoutChanges="true"
        android:onClick="@{() -> onClickAddableBookListener.onClickAddableBook(addableBook)}">

        <CheckedTextView
            android:id="@+id/btnChk"
            android:drawableStart="@drawable/ic_round_check_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:focusable="true"
            android:checked="@{addableBook.selected}"
            android:onClick="@{() -> layItem.performClick()}"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivThumb"
            android:layout_width="50dp"
            android:layout_height="60dp"
            app:thumbGuid="@{addableBook.thumbnailGuid}"
            tools:src="#000000"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            style="@style/titleInPopupDialog"
            android:text="@{addableBook.name}"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="bookName"/>
    </LinearLayout>
</layout>
